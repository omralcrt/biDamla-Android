<resources>

    <style name="BidamlaTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:statusBarColor">@color/colorPrimary</item>
    </style>

    <style name="MyRadioButton"> // for center options
        <item name="android:button">@null</item>
        <item name="android:textColor">@drawable/radio_text</item>
        <item name="android:background">@drawable/radio_button_center</item>
        <item name="android:padding">8dp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="MyRadioButtonLeftTop" parent="MyRadioButton">
        <item name="android:background">@drawable/radio_button_left_top</item>
    </style>

    <style name="MyRadioButtonLeftBottom" parent="MyRadioButton">
        <item name="android:background">@drawable/radio_button_left_bottom</item>
    </style>

    <style name="MyRadioButtonRightTop" parent="MyRadioButton">
        <item name="android:background">@drawable/radio_button_right_top</item>
    </style>

    <style name="MyRadioButtonRightBottom" parent="MyRadioButton">
        <item name="android:background">@drawable/radio_button_right_bottom</item>
    </style>

</resources>
